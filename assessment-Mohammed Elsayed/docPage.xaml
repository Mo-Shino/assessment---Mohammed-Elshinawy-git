<Window x:Class="assessment_Mohammed_Elsayed.docPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assessment_Mohammed_Elsayed"
        mc:Ignorable="d"
        Title="docPage" Height="450" Width="800">
    <Grid  Background="#FFAF5000">
        <StackPanel Margin="0,10,0,10" HorizontalAlignment="Center" Width="760">
            <DataGrid x:Name="DocDataGrid" HorizontalAlignment="Center" Width="730" Height="164" SelectionChanged="DocDataGrid_SelectionChanged">
            </DataGrid>

            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="combooo" Width="232" Margin="20" Height="35">
                    <ComboBoxItem Content="Scheduled"/>
                    <ComboBoxItem Content="Completed"/>
                    <ComboBoxItem Content="Cancelled"/>
                </ComboBox>

                <Button Content="save" Width="168" Margin="20" Click="Button_Click"/>
                <TextBox x:Name="txtID" IsReadOnly="True" Margin="20" Width="85" Background="#FFADADAD"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
