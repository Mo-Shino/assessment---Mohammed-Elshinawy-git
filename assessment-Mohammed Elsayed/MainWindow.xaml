<Window x:Class="assessment_Mohammed_Elsayed.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assessment_Mohammed_Elsayed"
        mc:Ignorable="d"
        Title="login" Height="450" Width="800">
    <Grid Background="#FFAF5000">
        <Border HorizontalAlignment="Center" Width="280" VerticalAlignment="Center" Height="332" Background="#FFCCC6C0" CornerRadius="30" Padding="20">
            <StackPanel>
                <Label HorizontalAlignment="Center" Content="Login" FontSize="24" FontWeight="Bold" Foreground="#FFAF5000"/>

                <TextBlock Text="UserName : " Margin="10,10,10,0" Foreground="#FF2F1601"/>
                <TextBox x:Name="txtEmail" Margin="10" Background="#FF968D84"/>
                
                <TextBlock Text="Password : " Margin="10,20,10,0" Foreground="#FF2F1601"/>
                <PasswordBox x:Name="txtPass" Margin="10" Background="#FF968D84"/>

                <Button IsDefault="True" Margin="20" Height="40" Background="#FFAF5000" Content="Submit" FontSize="18" FontWeight="Bold" Foreground="#FFCCC6C0" Click="Button_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
