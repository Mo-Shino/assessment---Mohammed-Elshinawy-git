<Window x:Class="assessment_Mohammed_Elsayed.RecepPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assessment_Mohammed_Elsayed"
        mc:Ignorable="d"
        Title="RecepPage" Height="450" Width="800">
    <Grid  Background="#FFAF5000">
        <StackPanel Margin="0,10,0,10" HorizontalAlignment="Center" Width="760">
            <StackPanel Orientation="Horizontal">
                <DataGrid x:Name="RecepDataGrid" Width="490" Height="164" SelectionChanged="RecepDataGrid_SelectionChanged" />
                <DataGrid x:Name="oo" Margin="10" Width="110" Height="164" SelectionChanged="RecepDataGrid_SelectionChanged" />
            </StackPanel>


            <StackPanel Orientation="Horizontal">
                <Label Content="search : " Margin="0,20,0,20" FontFamily="72 Black" Foreground="#FFDDDDDD" Height="25"/>
                <TextBox x:Name="txtSearch" Margin="10,20,0,20" Width="175" Background="#FFDDDDDD" />
                <Button Content="Search" Width="168" Margin="20" Click="Button_Click"/>
                <Label Content="ID :" Margin="15" FontWeight="Bold" Foreground="#FFDDDDDD"/>
                <TextBox x:Name="txtid" IsReadOnly="True" Margin="10,20,0,20" Width="38" Background="#FFDDDDDD"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">


                <Label Content="Notes : " Margin="15" FontWeight="Bold" Foreground="#FFDDDDDD"/>
                <TextBox x:Name="txtPatientNotes" Margin="0,15,0,15" Width="52" Height="30"/>

                <Label Content="Date Of Birth : " Margin="15" FontWeight="Bold" Foreground="#FFDDDDDD"/>
                <TextBox x:Name="txtDateOfBirth" Margin="0,15,0,15" Width="55" Height="30"/>

                <Label Content="Patient : " Margin="15" FontWeight="Bold" Foreground="#FFDDDDDD"/>
                <TextBox x:Name="txtPatientName" Margin="0,15,0,15" Width="70" Height="30"/>
                <Label Content="Phone : " Margin="15" FontWeight="Bold" Foreground="#FFDDDDDD"/>
                <TextBox x:Name="txtPhone" Margin="0,15,0,15" Width="75" Height="30"/>
                <Button Height="30" x:Name="addpatientbtn" Width="75" Content="Add patient" Margin="10" Click="addbtn_Click"/>

            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Patient id : " Margin="15" FontWeight="Bold" Foreground="#FFDDDDDD"/>
                <TextBox x:Name="txtPatientID" Margin="0,15,0,15" Width="31" Height="30"/>

                <Label Content="Status : " Margin="15" FontWeight="Bold" Foreground="#FFDDDDDD"/>
                <TextBox x:Name="txtStatus" Margin="0,15,0,15" Width="75" Height="30"/>

                <Label Content="DateTime : " Margin="15" FontWeight="Bold" Foreground="#FFDDDDDD"/>
                <TextBox x:Name="txtDateTime" Margin="0,15,0,15" Width="61" Height="30"/>

                <Label Content="Reason : " Margin="15" FontWeight="Bold" Foreground="#FFDDDDDD"/>
                <TextBox x:Name="txtReason" Margin="0,15,0,15" Width="75" Height="30"/>

                <Label Content="docID : " Margin="15" FontWeight="Bold" Foreground="#FFDDDDDD"/>
                <TextBox x:Name="txtmmm" Margin="0,15,0,15" Width="47" Height="30"/>
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">

                <Button Height="30" x:Name="addAppointmentbtn" Width="109" Content="Add Appointment" Margin="10" Click="addAppointmentbtn_Click" />
                <Button Height="30" x:Name="Updatebtn" Width="100" Content="Update" Margin="10" Click="Updatebtn_Click"/>
                <Button Height="30" x:Name="Deleteebtn" Width="100" Content="Delete" Margin="10" Click="Deleteebtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
